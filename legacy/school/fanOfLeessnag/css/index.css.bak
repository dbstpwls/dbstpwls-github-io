@charset "utf-8";
@import url(http://fonts.googleapis.com/css?family=Orbitron);
*{padding:0;margin:0}ul,li{list-style:none}a{text-decoration:none;color:black}
.wrap{width:100%;height:100%;position:fixed;min-width:1024px;min-height:768px;perspective:800px;font-family:orbitron;background:black}
h2{font-size:0}
video{display:block;width:100%;height:100%;position:absolute}

/*background*/
.seevideo{width:100%;height:100px;position:absolute}

/*header*/
nav{position:fixed;width:250px;height:100%;background:#F4F4F4;transform-origin:left;transition:all 0.4s;transform:rotateY(15deg)}
nav.on{transform:rotateY(0deg)}
nav.off{display:none;}
nav img{display:block;margin:0 auto;margin-top:100px}
.bt{display:none;z-index:10;width:70px;height:70px;position:fixed;left:50px;top:30px;cursor:pointer;transition:all 0.4s;}
.bt:hover{transform:scale(1.2 ,1.2)}

/*main*/
main{width:100%;height:100%}
.wrap2{width:100%;height:100%;background:#9B9EA3;transform-origin:right;transition:all 0.4s;transform:rotateY(-9deg);position:absolute}
main>div.on{transform:rotateY(0deg)}
main>div.off{display:none}
nav ul{text-align:center;position:absolute;width:100%;top:295px}
nav li{width:100%;font-size:27px;color:#4E5259;padding:20px 0px 20px 0px;cursor:pointer;transition:all 0.4s}
nav li:hover{background:#4E5259;color:#F4F4F4}

/*footer*/
footer{z-index:10;position:fixed;bottom:0;width:100%;height:100px;background:#345391;transform-origin:right;transition:all 0.4s;transform:rotateY(-9deg);display:block;}
footer.on{transform:rotateY(0deg)}
footer.off{display:none}
footer img{margin-right:20px;display:block;float:left;width:50px;height:50px;transition:all 0.3s;opacity:0.5}
footer img:hover{transform:scale(1.2,1.2);opacity:1}
.social{position:absolute;top:0;right:20px;width:228px;height:50px;float:right;margin:25px 50px 0px 0px}
footer span{margin-left:10%;line-height:100px;transition:all 0.4s}
footer span:hover{color:white}

/*section1*/
section article{margin:0 auto;width:1300px;height:auto;text-align:center}
section img{display:block;margin-top:30px;width:100%;height:590px}
section > article >p{font-size:25px;margin-top:100px}
.arrange{position:relative;text-align:center;text-align:center}
.arrange img{width:180px;height:205px;transition:all 0.2s}
.arrange img:hover{opacity:0.7}
.t{width:50px;height:50px;position:absolute;bottom:-11px;transition:all 0.4s;opacity:0.7}
.t:hover{transform:scale(1.2 ,1.2);opacity:1}

/*section2*/
.album img{width:150px;height:150px;float:left;margin-right:27%;margin-top:50px;transition:all 0.3s}
.album img:hover{transform:scale(1.2 , 1.2)}
.album p{margin:0;width:105px;float:left;margin:102px 44px 0 0}
section > div > article{width:1500px;margin-top:90px}
section > div > article > img{width:588px;height:750px;margin:0;float:left}
section > div > article > strong{font-size:22px;color:#345391;margin-bottom:25px}
.list{width:840px;height:664px;float:right;text-align:left;position:relative}.list p{margin-top:15px}
.a1,.a3,.a5,.a7,.a9,.a11,.a13,.a15{display:none}
.back img{width:100px;height:70px;position:absolute;right:80px;bottom:0;margin:0;cursor:pointer;transition:all 0.4s;opacity:0.7}
.back img:hover{transform:scale(1.2,1.2);opacity:1}

/*section3*/
.s3 > article > img , .s4 > article > img{width:450px;margin:0;float:left}
.s3 strong , .s4 strong{font-size:35px;color:#345391;margin-bottom:25px}
.s3 article , .s4 article{margin-top:60px}
.introduce{text-align:left;font-size:20px;width:828px;float:right;line-height:36px;margin-top:32px}
.s3 ul , .s4 ul{float:right;margin:80px 0px 0 0;width:850px;border-top:1px solid}
.s3 ul > li , .s4 ul > li{width:569px;height:100px;margin:20px 130px 0 0;float:right;font-size:20px;color:#345391}
.drop{width:100%;height:120px;background:#F4F4F4;position:absolute;bottom:140px}
.drop img{width:100px;height:100px;margin-top:10px}
.drop div{width:1300px;height:120px;margin:0 auto}
.solo{height:100%;float:left;line-height:100px;margin-right:50px;font-size:20px}
.s2,.s3,.s4{display:none;}